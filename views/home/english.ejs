    <div class="container">
      <img class="stone" src="images/swap_eng02.png" alt="banner">
      <div class="text-block">
        <p id="address">0x4f8473a5b70bd48D3cC6400706595B4BbD261fdA</p>
      </div>
      <button onclick="copyToClipboard('#address')" class="btn">Copy</button>
    </div>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js">
      function copyToClipboard(element) {
        var $temp = $("<input>");
        $("body").append($temp);
        $temp.val($(element).text()).select();
        document.execCommand("copy");
        $temp.remove();
      }
    </script>
  </body>
